<script>
    document.addEventListener('alpine:init', () => {
        Alpine.data('details', () => ({
            goBack() {
                window.location.href = "/phieu-dieu-tri";
            }
        }));
    });

    function showNoteModal(note, type, identifier) {
        const modal = document.getElementById('noteModal');
        const noteContent = document.getElementById('noteContent');
        const modalTitle = document.getElementById('noteModalTitle');

        // Cập nhật tiêu đề modal dựa vào type
        switch (type) {
            case 'treatment':
                modalTitle.textContent = `Ghi chú của chi tiết điều trị (${identifier})`;
                break;
            case 'assignment':
                modalTitle.textContent = `Ghi chú của bác sĩ (${identifier})`;
                break;
            case 'regulation':
                modalTitle.textContent = `Ghi chú của quy định (${identifier})`;
                break;
            default:
                modalTitle.textContent = 'Ghi chú';
        }

        // Kiểm tra note có giá trị hay không
        if (!note || note.trim() === '') {
            noteContent.textContent = 'Chưa thêm ghi chú';
            noteContent.classList.add('text-gray-500', 'italic');
        } else {
            noteContent.textContent = note;
            noteContent.classList.remove('text-gray-500', 'italic');
        }

        modal.classList.remove('hidden');
        // Reset animation
        const modalContent = modal.querySelector('.modal-content');
        modalContent.style.animation = 'none';
        modalContent.offsetHeight; // Trigger reflow
        modalContent.style.animation = null;
    }

    function closeNoteModal() {
        const modal = document.getElementById('noteModal');
        const modalContent = modal.querySelector('.modal-content');
        modalContent.classList.add('modal-closing');

        setTimeout(() => {
            modal.classList.add('hidden');
            modalContent.classList.remove('modal-closing');
        }, 200);
    }

    // Đóng modal khi click bên ngoài
    window.onclick = function (event) {
        const modal = document.getElementById('noteModal');
        if (event.target == modal) {
            closeNoteModal();
        }
    }
</script>

