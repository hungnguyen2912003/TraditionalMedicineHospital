        <!-- Phần 1: Thông tin phiếu điều trị -->
        <div x-show="tab === 'treatment-record'" x-cloak>
            <div class="mb-5 rounded-md border border-[#ebedf2] bg-white p-4 dark:border-[#191e3a] dark:bg-[#0e1726]">
                <div class="pt-5 flex flex-col gap-2.5 xl:flex-row">
                    <div class="panel flex-1 px-0 py-6 ltr:lg:mr-6 rtl:lg:ml-6">
                        <div class="px-6">
                            <h6 class="mb-5 text-lg font-bold">Thông tin phiếu điều trị</h6>
                            <div class="flex flex-col lg:flex-row gap-6">
                                <div class="w-full lg:max-w-full p-4 rounded-lg shadow-sm">
                                    <div class="flex flex-col sm:flex-row gap-4 mb-4">
                                        <div class="w-full sm:w-1/2">
                                            <label for="treatmentRecordCode">Mã điều trị</label>
                                            <input id="treatmentRecordCode" name="Code" class="form-input" readonly
                                                   value="@Model.TreatmentRecord.Code" />
                                        </div>
                                        <div class="w-full sm:w-1/2">
                                            <label for="Diagnosis">Chẩn đoán<span class="text-danger">&nbsp*</span></label>
                                            <div class="select-wrapper">
                                                <select id="Diagnosis" name="Diagnosis" class="form-input w-full mt-1 p-2 border rounded choices">
                                                    <option value="">Chọn chẩn đoán</option>
                                                    @foreach (var diagnosis in ViewBag.DiagnosisOptions)
                                                    {
                                                        <option value="@diagnosis.Value">@diagnosis.Text</option>
                                                    }
                                                </select>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.TreatmentRecord.Diagnosis, "", new { @class =
                                            "text-danger" })
                                        </div>
                                        <div class="w-full sm:w-1/2">
                                            <label for="PatientId">Bệnh nhân<span class="text-danger">&nbsp*</span></label>
                                            <div class="select-wrapper">
                                                <select id="PatientId" name="PatientId" class="form-input w-full mt-1 p-2 border rounded choices">
                                                    <option value="">Chọn bệnh nhân</option>
                                                    @foreach (var patient in ViewBag.Patient_TreatmentRecord)
                                                    {
                                                        <option value="@patient.Id">@patient.Name</option>
                                                    }
                                                </select>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.TreatmentRecord.PatientId, "", new { @class =
                                            "text-danger" })
                                        </div>
                                        <div class="w-full sm:w-1/2">
                                            <label for="AdvancePayment">Tiền ứng trước<span class="text-danger">&nbsp*</span></label>
                                            <div class="flex items-center">
                                                <input id="AdvancePayment" name="AdvancePayment" class="form-input advance-payment w-full mt-1 p-2 border rounded" type="text"
                                                       placeholder="Nhập tiền ứng trước" />
                                                <span class="ml-2 text-gray-700" style="font-weight: 900">VND</span>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.TreatmentRecord.AdvancePayment, "", new { @class =
                                                                                        "text-danger" })
                                        </div>
                                    </div>
                                    <div class="flex flex-col sm:flex-row gap-4 mb-4">
                                        <div class="w-full sm:w-1/2">
                                            <label for="StartDate">
                                                Ngày bắt đầu<span class="text-danger">&nbsp*</span>
                                            </label>
                                            <input id="StartDate" name="StartDate" class="form-input flatpickr" type="text"
                                                   placeholder="Chọn ngày bắt đầu" value="@DateTime.Now.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)"/>
                                            @Html.ValidationMessageFor(model => model.TreatmentRecord.StartDate, "", new { @class =
                                                                                        "text-danger" })
                                        </div>
                                        <div class="w-full sm:w-1/2">
                                            <label for="EndDate">
                                                Ngày kết thúc<span class="text-danger">&nbsp*</span>
                                            </label>
                                            <input id="EndDate" name="EndDate" class="form-input flatpickr" type="text"
                                                   placeholder="Chọn ngày kết thúc" />
                                            @Html.ValidationMessageFor(model => model.TreatmentRecord.EndDate, "", new { @class =
                                                                                        "text-danger" })
                                        </div>
                                    </div>
                                    <div class="w-full sm:col-span-2">
                                        <label for="treatmentRecordNote">Ghi chú</label>
                                        <textarea id="treatmentRecordNote" name="TreatmentRecord.Note"
                                                  class="form-textarea w-full mt-1 p-2 border rounded min-h-[100px]"
                                                  placeholder="Nhập ghi chú..."></textarea>
                                        @Html.ValidationMessageFor(model => model.TreatmentRecord.Note, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Phần 2: Thông tin điều trị -->
        <div x-show="tab === 'treatment-details'" x-cloak>
            <div x-data="treatmentDetailTable" class="mb-5 rounded-md border border-[#ebedf2] bg-white p-4">
                <h6 class="mb-5 text-lg font-bold">Thông tin điều trị</h6>
                <div class="table-responsive">
                    <table class="table-striped w-full table-bordered">
                        <thead>
                            <tr>
                                <th style="text-align: center; font-weight: bold;">STT</th>
                                <th style="text-align: center; font-weight: bold;">Mã chi tiết điều trị</th>
                                <th style="text-align: center; font-weight: bold;">Phương pháp điều trị</th>
                                <th style="text-align: center; font-weight: bold;">Phòng</th>
                                <th style="text-align: center; font-weight: bold;">Ghi chú</th>
                                <th style="text-align: center; font-weight: bold;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <template x-for="(detail, idx) in details" :key="detail.Code">
                                <tr>
                                    <td style="text-align: center;" x-text="idx + 1"></td>
                                    <td>
                                        <input :id="'treatmentRecordDetailCode-' + idx" type="text" class="form-input" x-model="detail.Code" readonly
                                               :name="'TreatmentRecordDetails['+idx+'].Code'">
                                    </td>
                                    <td>
                                        <select :id="'treatmentRecordDetailTreatmentMethod-' + idx" class="form-select" x-model="detail.TreatmentMethodId"
                                                :name="'TreatmentRecordDetails['+idx+'].TreatmentMethodId'"
                                                @@change="onMethodChange(idx)">
                                            <option value="">Chọn phương pháp</option>
                                            <template x-for="method in getAvailableMethods(idx)" :key="method.id">
                                                <option :value="method.id" x-text="method.name"></option>
                                            </template>
                                        </select>
                                    </td>
                                    <td>
                                        <select :id="'treatmentRecordDetailRoom-' + idx" class="form-select" x-model="detail.RoomId"
                                                :name="'TreatmentRecordDetails['+idx+'].RoomId'"
                                                :disabled="isRoomDisabled(detail)">
                                            <option value="">Chọn phòng</option>
                                            <template x-for="room in getRoomsForMethod(detail.TreatmentMethodId)" :key="room.id">
                                                <option :value="room.id" x-text="room.name"></option>
                                            </template>
                                        </select>
                                    </td>
                                    <td>
                                        <input :id="'treatmentRecordDetailNote-' + idx" type="text" class="form-input" x-model="detail.Note"
                                               :name="'TreatmentRecordDetails['+idx+'].Note'" placeholder="Nhập ghi chú...">
                                    </td>
                                    <td>
                                        <button type="button" @@click="removeDetail(idx)">
                                            <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="1.5"><line x1="18" y1="6" x2="6" y2="18" /><line x1="6" y1="6" x2="18" y2="18" /></svg>
                                        </button>
                                    </td>
                                </tr>
                            </template>
                            <tr x-show="details.length === 0">
                                <td colspan="5" class="text-center">Chưa có thông tin điều trị nào</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="mt-6 flex flex-col sm:flex-row justify-between px-4">
                    <button type="button" class="btn btn-primary mb-4 sm:mb-0" @@click="addDetail()">Thêm mới</button>
                </div>
            </div>
        </div>

        <!-- Phần 3: Phân công bác sĩ -->
        <div x-show="tab === 'assignment'" x-cloak>
            <div class="mb-5 rounded-md border border-[#ebedf2] bg-white p-4 dark:border-[#191e3a] dark:bg-[#0e1726]">
                <div class="pt-5 flex flex-col gap-2.5 xl:flex-row">
                    <div class="panel flex-1 px-0 py-6 ltr:lg:mr-6 rtl:lg:ml-6">
                        <div class="px-6">
                            <h6 class="mb-5 text-lg font-bold">Thông tin Phân công nhân sự</h6>
                            <div class="flex flex-col lg:flex-row gap-6">
                                <div class="w-full lg:max-w-full p-4 rounded-lg shadow-sm">
                                    <div class="flex flex-col sm:flex-row gap-4 mb-4">
                                        <div class="w-full sm:w-1/2">
                                            <label for="assignmentCode">Mã phân công</label>
                                            <input id="assignmentCode" name="Assignment.Code" class="form-input" readonly value="@Model.Assignment.Code" />
                                        </div>
                                        <div class="w-full sm:w-1/2">
                                            <label for="assignmentEmployee">
                                                Bác sĩ phân công<span class="text-danger">&nbsp*</span>
                                            </label>
                                            <input id="assignmentEmployee" name="Assignment.EmployeeId" class="form-input" readonly value="@ViewData["EmployeeName"]" />
                                        </div>
                                    </div>
                                    <div class="flex flex-col sm:flex-row gap-4 mb-4">
                                        <div class="w-full sm:w-1/2">
                                            <label for="assignmentStartDate">
                                                Ngày bắt đầu<span class="text-danger">&nbsp*</span>
                                            </label>
                                            <input id="assignmentStartDate" name="Assignment.StartDate" class="form-input opacity-50 cursor-not-allowed" type="text" placeholder="Chọn ngày bắt đầu" readonly />
                                            @Html.ValidationMessageFor(model => model.Assignment.StartDate, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="w-full sm:w-1/2">
                                            <label for="assignmentEndDate">
                                                Ngày kết thúc<span class="text-danger">&nbsp*</span>
                                            </label>
                                            <input id="assignmentEndDate" name="Assignment.EndDate" class="form-input opacity-50 cursor-not-allowed" type="text" placeholder="Chọn ngày kết thúc" readonly />
                                            @Html.ValidationMessageFor(model => model.Assignment.EndDate, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div id="assignmentDateWarning" class="text-sm text-amber-400 mb-4" style="display: none; color: coral; font-weight: bold;">
                                        <div class="flex items-center">
                                            <svg class="w-4 h-4 inline-block mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                            </svg>
                                            Vui lòng chọn thời gian điều trị trước khi chọn thời gian phân công!
                                        </div>
                                    </div>
                                    <div class="w-full sm:col-span-2">
                                        <label for="assignmentNote">Ghi chú</label>
                                        <textarea id="assignmentNote" name="Assignment.Note"
                                                  class="form-textarea w-full mt-1 p-2 border rounded min-h-[100px]"
                                                  placeholder="Nhập ghi chú..."></textarea>
                                        @Html.ValidationMessageFor(model => model.Assignment.Note, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Phần 4: Quy định điều trị (dạng bảng) -->
        <div x-show="tab === 'regulations'" x-cloak>
            <div class="mb-5 rounded-md border border-[#ebedf2] bg-white p-4 dark:border-[#191e3a] dark:bg-[#0e1726]">
                <h6 class="mb-5 text-lg font-bold">Quy định điều trị</h6>
                <div class="table-responsive">
                    <table class="table-striped w-full table-bordered">
                        <thead>
                            <tr>
                                <th style="text-align: center; font-weight: bold;">STT</th>
                                <th style="text-align: center; font-weight: bold;">Tên quy định</th>
                                <th style="text-align: center; font-weight: bold;">Ngày thực hiện</th>
                                <th style="text-align: center; font-weight: bold;">Ghi chú</th>
                                <th style="text-align: center; font-weight: bold;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <template x-for="(regulation, idx) in regulations" :key="regulation.Code">
                                <tr>
                                    <td style="text-align: center;" x-text="idx + 1"></td>
                                    <td>
                                        <select :id="'regulationId-' + idx" :name="'Regulations[' + idx + '].RegulationId'"
                                                class="form-select regulation-select" x-model="regulation.RegulationId"
                                                @@change="onRegulationChange(idx, $event.target.value)">
                                            <option value="">Chọn quy định</option>
                                            <template x-for="reg in getAvailableRegulations(idx)" :key="reg.id">
                                                <option :value="reg.id" x-text="reg.name + ' (' + reg.effectiveStartDate + ' - ' + reg.effectiveEndDate + ')'" :selected="regulation.RegulationId == reg.id"></option>
                                            </template>
                                        </select>
                                    </td>
                                    <td>
                                        <input :id="'executionDate-' + idx" :name="'Regulations[' + idx + '].ExecutionDate'"
                                               x-model="regulation.ExecutionDate"
                                               :disabled="!regulation.RegulationId"
                                               :class="{'opacity-50 cursor-not-allowed': !regulation.RegulationId}"
                                               class="form-input regulation-date flatpickr"
                                               type="text" placeholder="Chọn ngày thực hiện" readonly />
                                    </td>
                                    <td>
                                        <input :id="'note-' + idx" :name="'Regulations[' + idx + '].Note'"
                                               x-model="regulation.Note"
                                               class="form-input" placeholder="Nhập ghi chú" />
                                        <input type="hidden" :name="'Regulations[' + idx + '].Code'"
                                               :value="regulation.Code" />
                                    </td>
                                    <td>
                                        <button type="button" @@click="removeRegulation(idx)">
                                            <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="1.5"><line x1="18" y1="6" x2="6" y2="18" /><line x1="6" y1="6" x2="18" y2="18" /></svg>
                                        </button>                                        
                                    </td>
                                </tr>
                            </template>
                            <tr x-show="regulations.length === 0">
                                <td colspan="5" class="text-center">Chưa có quy định nào được thêm</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="mt-6 flex flex-col sm:flex-row justify-between px-4">
                    <button type="button" class="btn btn-primary mb-4 sm:mb-0" @@click="addRegulation()">Thêm quy định</button>
                </div>
            </div>
        </div>

        <!-- Nút lưu -->
        <div class="flex justify-end mt-4">
            <button type="button" class="btn btn-primary" @@click="submitForm()">Lưu</button>
            <button type="button" class="btn btn-secondary ml-2" @@click="goBack()">Trở lại</button>
        </div>
    </div>
</form>

<script src="~/public/assets/js/treatmentrecordcreate.js?v=@DateTime.Now.Ticks"></script>
<script>
    window.treatmentMethodsData = @Html.Raw(Json.Serialize(ViewBag.TreatmentMethods_Reception));
    window.roomsData = @Html.Raw(Json.Serialize(ViewBag.Rooms));
    window.regulationsData = @Html.Raw(Json.Serialize(ViewBag.Regulations));
    window.employeeTreatmentMethod = @Html.Raw(Json.Serialize(ViewBag.EmployeeTreatmentMethod));
    window.employeeRoom = @Html.Raw(Json.Serialize(ViewBag.EmployeeRoom));
    window.initialRegulations = @Html.Raw(Json.Serialize(Model.Regulations ?? new List<Project.Areas.BacSi.Models.DTOs.RegulationDto>()));
    window.treatmentRecordDetailsData = @Html.Raw(Json.Serialize(Model.TreatmentRecordDetails ?? new List<Project.Areas.BacSi.Models.DTOs.TreatmentRecordDetailDto>()));
</script>