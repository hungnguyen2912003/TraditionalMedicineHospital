    <!-- Phần 1: Thông tin phiếu điều trị -->
    <div x-show="tab === 'treatment-record'" x-cloak>
        <div class="mb-5 rounded-md border border-[#ebedf2] bg-white p-4 dark:border-[#191e3a] dark:bg-[#0e1726]">
            <div class="pt-5 flex flex-col gap-2.5 xl:flex-row">
                <div class="panel flex-1 px-0 py-6 ltr:lg:mr-6 rtl:lg:ml-6">
                    <div class="px-6">
                        <h6 class="mb-5 text-lg font-bold">Thông tin phiếu điều trị</h6>
                        <div class="flex flex-col lg:flex-row gap-6">
                            <div class="w-full lg:max-w-full p-4 rounded-lg shadow-sm">
                                <div class="flex flex-col sm:flex-row gap-4 mb-4">
                                    <div class="w-full sm:w-1/2">
                                        <label for="treatmentRecordCode">Mã điều trị</label>
                                        <input id="treatmentRecordCode" class="form-input" readonly
                                            value="@Model.Code" />
                                    </div>
                                    <div class="w-full sm:w-1/2">
                                        <label for="Diagnosis">Chẩn đoán</label>
                                        <input id="Diagnosis" class="form-input" readonly value="@Model.Diagnosis" />
                                    </div>
                                </div>
                                <div class="flex flex-col sm:flex-row gap-4 mb-4">
                                    <div class="w-full sm:w-1/2">
                                        <label for="StartDate">Ngày bắt đầu</label>
                                        <input id="StartDate" class="form-input" readonly
                                            value="@Model.StartDate.ToString("dd/MM/yyyy")" />
                                    </div>
                                    <div class="w-full sm:w-1/2">
                                        <label for="EndDate">Ngày kết thúc</label>
                                        <input id="EndDate" class="form-input" readonly
                                            value="@Model.EndDate.ToString("dd/MM/yyyy")" />
                                    </div>
                                </div>
                                <div class="w-full sm:col-span-2">
                                    <label for="treatmentRecordNote">Ghi chú</label>
                                    <textarea id="treatmentRecordNote"
                                        class="form-textarea w-full mt-1 p-2 border rounded min-h-[100px]"
                                        readonly>@Model.Note</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Phần 2: Thông tin bệnh nhân -->
    <div x-show="tab === 'patient'" x-cloak>
        <div class="mb-5 rounded-md border border-[#ebedf2] bg-white p-4 dark:border-[#191e3a] dark:bg-[#0e1726]">
            <div class="pt-5 flex flex-col gap-2.5 xl:flex-row">
                <div class="panel flex-1 px-0 py-6 ltr:lg:mr-6 rtl:lg:ml-6">
                    <div class="px-6">
                        <h6 class="mb-5 text-lg font-bold">Thông tin bệnh nhân</h6>
                        <div class="flex flex-col lg:flex-row gap-6">
                            <div class="w-full lg:max-w-full p-4 rounded-lg shadow-sm">
                                <div class="flex flex-col sm:flex-row gap-4 mb-4">
                                    <div class="w-full sm:w-1/2">
                                        <label for="Code" class="block text-sm font-medium text-gray-700">Mã bệnh
                                            nhân</label>
                                        <input id="Code" class="form-input w-full mt-1 p-2 border rounded" readonly
                                            value="@Model.Patient.Code" />
                                    </div>
                                    <div class="w-full sm:w-1/2">
                                        <label for="Name" class="block text-sm font-medium text-gray-700">Họ tên bệnh
                                            nhân</label>
                                        <input id="Name" class="form-input w-full mt-1 p-2 border rounded" readonly
                                            value="@Model.Patient.Name" />
                                    </div>
                                </div>
                                <div class="flex flex-col sm:flex-row gap-4 mb-4">
                                    <div class="w-full sm:w-1/2">
                                        <label for="Gender" class="block text-sm font-medium text-gray-700">Giới
                                            tính</label>
                                        <input id="Gender" class="form-input w-full mt-1 p-2 border rounded" readonly
                                            value="@Model.Patient.Gender" />
                                    </div>
                                    <div class="w-full sm:w-1/2">
                                        <label for="DateOfBirth" class="block text-sm font-medium text-gray-700">Ngày
                                            sinh</label>
                                        <input id="DateOfBirth" class="form-input w-full mt-1 p-2 border rounded"
                                            readonly value="@Model.Patient.DateOfBirth.ToString("dd/MM/yyyy")" />
                                    </div>
                                    <div class="w-full sm:w-1/2">
                                        <label for="IdentityNumber" class="block text-sm font-medium text-gray-700">Căn
                                            cước công dân</label>
                                        <input id="IdentityNumber" class="form-input w-full mt-1 p-2 border rounded"
                                            readonly value="@Model.Patient.IdentityNumber" />
                                    </div>
                                </div>
                                <div class="flex flex-col sm:flex-row gap-4 mb-4">
                                    <div class="w-full address-container">
                                        <label for="Address" class="block text-sm font-medium text-gray-700">Địa
                                            chỉ</label>
                                        <input id="Address" class="form-input w-full mt-1 p-2 border rounded" readonly
                                            value="@Model.Patient.Address" />
                                    </div>
                                </div>
                                <div class="flex flex-col sm:flex-row gap-4 mb-4">
                                    <div class="w-full sm:w-1/2">
                                        <label for="PhoneNumber" class="block text-sm font-medium text-gray-700">Số điện
                                            thoại</label>
                                        <input id="PhoneNumber" class="form-input w-full mt-1 p-2 border rounded"
                                            readonly value="@Model.Patient.PhoneNumber" />
                                    </div>
                                    <div class="w-full sm:w-1/2">
                                        <label for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                                        <input id="Email" class="form-input w-full mt-1 p-2 border rounded" readonly
                                            value="@Model.Patient.EmailAddress" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Phần 3: Thông tin điều trị -->
    <div x-show="tab === 'treatment-details'" x-cloak>
        <div class="mb-5 rounded-md border border-[#ebedf2] bg-white p-4 dark:border-[#191e3a] dark:bg-[#0e1726]">
            <div class="pt-5 flex flex-col gap-2.5 xl:flex-row">
                <div class="panel flex-1 px-0 py-6 ltr:lg:mr-6 rtl:lg:ml-6">
                    <div class="px-6">
                        <h6 class="mb-5 text-lg font-bold">Thông tin điều trị</h6>
                        @if (Model.TreatmentRecordDetails != null && Model.TreatmentRecordDetails.Any())
                        {
                            foreach (var detail in Model.TreatmentRecordDetails)
                            {
                                <div class="flex flex-col lg:flex-row gap-6 mb-6">
                                    <div class="w-full lg:max-w-full p-4 rounded-lg shadow-sm border">
                                        <div class="flex flex-col sm:flex-row gap-4 mb-4">
                                            <div class="w-full sm:w-1/2">
                                                <label class="block text-sm font-medium text-gray-700">Mã chi tiết điều
                                                    trị</label>
                                                <input class="form-input w-full mt-1 p-2 border rounded" readonly
                                                    value="@detail.Code" />
                                            </div>
                                            <div class="w-full sm:w-1/2">
                                                <label class="block text-sm font-medium text-gray-700">Phòng điều trị</label>
                                                <input class="form-input w-full mt-1 p-2 border rounded" readonly
                                                    value="@detail.Room.Name" />
                                            </div>
                                        </div>
                                        <div class="w-full">
                                            <label class="block text-sm font-medium text-gray-700">Ghi chú</label>
                                            <textarea class="form-textarea w-full mt-1 p-2 border rounded min-h-[100px]"
                                                readonly>@detail.Note</textarea>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center text-gray-500">
                                Chưa có thông tin chi tiết điều trị
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Nút quay lại -->
    <div class="flex justify-end mt-4">
        <a href="@Url.Action("Index", "TreatmentRecords")" class="btn btn-secondary">Quay lại</a>
    </div>
</div>

<script>
    document.addEventListener('alpine:init', () => {
        Alpine.data('details', () => ({

            print() {
                window.print();
            },
            goBack() {
                window.location.href = '/Staff/TreatmentRecords/';
            }
        }));
    });
</script>