@model Project.Areas.Staff.Models.Entities.Prescription
@{
    ViewData["Title"] = "Chi tiết đơn thuốc";
    Layout = "~/Views/Shared/_mainAdminLayout.cshtml";
}

<ul class="flex space-x-2 rtl:space-x-reverse">
    <li>
        <a href="javascript:;" class="text-primary hover:underline">Đơn thuốc</a>
    </li>
    <li class="before:content-['/'] ltr:before:mr-1 rtl:before:ml-1">
        <span>Xem chi tiết</span>
    </li>
</ul>

<div x-data="details">
    <div class="mb-3 mt-3 flex flex-wrap items-center justify-between gap-4">
        <div>
            <button type="button"
                class="btn btn-secondary w-full py-2 bg-gray-500 text-white rounded-lg flex items-center gap-2 hover:bg-gray-600"
                @@click = "goBack()" >
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5">
                    <path
                        d="M4 10L3.29289 10.7071L2.58579 10L3.29289 9.29289L4 10ZM21 18C21 18.5523 20.5523 19 20 19C19.4477 19 19 18.5523 19 18L21 18ZM8.29289 15.7071L3.29289 10.7071L4.70711 9.29289L9.70711 14.2929L8.29289 15.7071ZM3.29289 9.29289L8.29289 4.29289L9.70711 5.70711L4.70711 10.7071L3.29289 9.29289ZM4 9L14 9L14 11L4 11L4 9ZM21 16L21 18L19 18L19 16L21 16ZM14 9C17.866 9 21 12.134 21 16L19 16C19 13.2386 16.7614 11 14 11L14 9Z"
                        fill="white" />
                </svg>
                Trở về
            </button>
        </div>
        <div class="flex gap-2 lg:justify-end">
            <button type="button" class="btn btn-primary gap-2" @@click="print">
                <svg width="24" height="24" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5">
                    <path
                        d="M6 17.9827C4.44655 17.9359 3.51998 17.7626 2.87868 17.1213C2 16.2426 2 14.8284 2 12C2 9.17157 2 7.75736 2.87868 6.87868C3.75736 6 5.17157 6 8 6H16C18.8284 6 20.2426 6 21.1213 6.87868C22 7.75736 22 9.17157 22 12C22 14.8284 22 16.2426 21.1213 17.1213C20.48 17.7626 19.5535 17.9359 18 17.9827"
                        stroke="currentColor" stroke-width="1.5"></path>
                    <path opacity="0.5" d="M9 10H6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round">
                    </path>
                    <path d="M19 14L5 14" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"></path>
                    <path
                        d="M18 14V16C18 18.8284 18 20.2426 17.1213 21.1213C16.2426 22 14.8284 22 12 22C9.17157 22 7.75736 22 6.87868 21.1213C6 20.2426 6 18.8284 6 16V14"
                        stroke="currentColor" stroke-width="1.5" stroke-linecap="round"></path>
                    <path opacity="0.5"
                        d="M17.9827 6C17.9359 4.44655 17.7626 3.51998 17.1213 2.87868C16.2427 2 14.8284 2 12 2C9.17158 2 7.75737 2 6.87869 2.87868C6.23739 3.51998 6.06414 4.44655 6.01733 6"
                        stroke="currentColor" stroke-width="1.5"></path>
                    <circle opacity="0.5" cx="17" cy="10" r="1" fill="currentColor"></circle>
                    <path opacity="0.5" d="M15 16.5H9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round">
                    </path>
                    <path opacity="0.5" d="M13 19H9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round">
                    </path>
                </svg>
                In
            </button>

            <button type="button" class="btn btn-success gap-2">
                <svg width="24" height="24" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5">
                    <path opacity="0.5"
                        d="M17 9.00195C19.175 9.01406 20.3529 9.11051 21.1213 9.8789C22 10.7576 22 12.1718 22 15.0002V16.0002C22 18.8286 22 20.2429 21.1213 21.1215C20.2426 22.0002 18.8284 22.0002 16 22.0002H8C5.17157 22.0002 3.75736 22.0002 2.87868 21.1215C2 20.2429 2 18.8286 2 16.0002L2 15.0002C2 12.1718 2 10.7576 2.87868 9.87889C3.64706 9.11051 4.82497 9.01406 7 9.00195"
                        stroke="currentColor" stroke-width="1.5" stroke-linecap="round"></path>
                    <path d="M12 2L12 15M12 15L9 11.5M12 15L15 11.5" stroke="currentColor" stroke-width="1.5"
                        stroke-linecap="round" stroke-linejoin="round"></path>
                </svg>
                Tải xuống
            </button>

            <a href="/Staff/Prescriptions/Edit/@Model.Id" class="btn btn-warning gap-2">
                <svg width="24" height="24" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5">
                    <path opacity="0.5"
                        d="M22 10.5V12C22 16.714 22 19.0711 20.5355 20.5355C19.0711 22 16.714 22 12 22C7.28595 22 4.92893 22 3.46447 20.5355C2 19.0711 2 16.714 2 12C2 7.28595 2 4.92893 3.46447 3.46447C4.92893 2 7.28595 2 12 2H13.5"
                        stroke="currentColor" stroke-width="1.5" stroke-linecap="round"></path>
                    <path
                        d="M17.3009 2.80624L16.652 3.45506L10.6872 9.41993C10.2832 9.82394 10.0812 10.0259 9.90743 10.2487C9.70249 10.5114 9.52679 10.7957 9.38344 11.0965C9.26191 11.3515 9.17157 11.6225 8.99089 12.1646L8.41242 13.9L8.03811 15.0229C7.9492 15.2897 8.01862 15.5837 8.21744 15.7826C8.41626 15.9814 8.71035 16.0508 8.97709 15.9619L10.1 15.5876L11.8354 15.0091C12.3775 14.8284 12.6485 14.7381 12.9035 14.6166C13.2043 14.4732 13.4886 14.2975 13.7513 14.0926C13.9741 13.9188 14.1761 13.7168 14.5801 13.3128L20.5449 7.34795L21.1938 6.69914C22.2687 5.62415 22.2687 3.88124 21.1938 2.80624C20.1188 1.73125 18.3759 1.73125 17.3009 2.80624Z"
                        stroke="currentColor" stroke-width="1.5"></path>
                    <path opacity="0.5"
                        d="M16.6522 3.45508C16.6522 3.45508 16.7333 4.83381 17.9499 6.05034C19.1664 7.26687 20.5451 7.34797 20.5451 7.34797M10.1002 15.5876L8.4126 13.9"
                        stroke="currentColor" stroke-width="1.5"></path>
                </svg>
                Chỉnh sửa
            </a>
        </div>
    </div>
    <div class="panel">
        <div>
            <h6 class="mb-5 text-2xl font-bold">Thông tin chi tiết đơn thuốc: @Model.Code</h6>
            <hr class="mb-5">
            <div class="flex flex-col sm:flex-row">
                <div class="grid flex-1 grid-cols-1 gap-5 sm:grid-cols-2">
                    <div>
                        <label for="PrescriptionCode">Mã đơn thuốc</label>
                        <input id="PrescriptionCode" type="text" class="form-input" value="@Model.Code" readonly>
                    </div>
                    <div>
                        <label for="TreatmentRecordCode">Mã phiếu điều trị</label>
                        <input id="TreatmentRecordCode" type="text" value="@Model.TreatmentRecord?.Code" readonly class="form-input" readonly>
                    </div>
                    <div>
                        <label for="PatientName">Tên bệnh nhân</label>
                        <input id="PatientName" type="text" value="@Model.TreatmentRecord?.Patient?.Name" readonly class="form-input" readonly>
                    </div>
                    <div>
                        <label for="PrescriptionDate">Ngày lập đơn</label>
                        <input id="PrescriptionDate" type="text" value="@Model.PrescriptionDate.ToString("dd/MM/yyyy")" readonly class="form-input" readonly>
                    </div>                                       
                </div>
            </div>
            <div class="mt-5">
                <label for="Note">Ghi chú đơn thuốc</label>
                <textarea id="Note" name="Note" class="form-textarea w-full mt-1 p-2 border rounded min-h-[150px]" style="resize: none;" readonly>@(string.IsNullOrWhiteSpace(Model.Note) ? "Không có ghi chú" : Model.Note)</textarea>
            </div>
            <div class="mt-5">
                <h6 class="mb-3 text-lg font-bold">Danh sách thuốc</h6>
                <div class="table-responsive">
                    <table class="table table-bordered w-full">
                        <thead>
                            <tr>
                                <th style="text-align: center; font-weight: bold;">Tên thuốc</th>
                                <th style="text-align: center; font-weight: bold;">Số lượng</th>
                                <th style="text-align: center; font-weight: bold;">Đơn giá</th>
                                <th style="text-align: center; font-weight: bold;">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.PrescriptionDetails != null && Model.PrescriptionDetails.Any())
                            {
                                foreach (var item in Model.PrescriptionDetails)
                                {
                                    <tr>
                                        <td>@item.Medicine?.Name</td>
                                        <td>@item.Quantity</td>
                                        <td>@(item.Medicine != null ? item.Medicine.Price.ToString("N0") + " VNĐ" : "Không rõ")</td>
                                        <td>@((item.Medicine != null ? item.Medicine.Price * item.Quantity : 0).ToString("N0")) VNĐ</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center">Không có thuốc nào trong đơn này</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr style="height: 50px;">
                                <td colspan="3" style="text-align: right; font-weight: bold;">Tổng cộng</td>
                                <td style="font-weight: bold;">@Model.TotalCost.ToString("N0") VNĐ</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="flex flex-col sm:flex-row mt-5">
                <div class="grid flex-1 grid-cols-1 gap-5 sm:grid-cols-2">
                    <div>
                        <label for="createdDate">Ngày tạo</label>
                        <input id="createdDate" type="text" value="@Model.CreatedDate.ToString("dd/MM/yyyy")" readonly
                            class="form-input">
                    </div>
                    <div>
                        <label for="createdBy">Nguời tạo</label>
                        <input id="createdBy" type="text" value="@Model.CreatedBy" readonly class="form-input">
                    </div>
                    <div>
                        <label for="UpdatedDate">Ngày chỉnh sửa</label>
                        <input id="UpdatedDate" type="text"
                            value="@(Model.UpdatedDate?.ToString("dd/MM/yyyy") ?? "Không có")" readonly
                            class="form-input">
                    </div>
                    <div>
                        <label for="UpdatedBy">Nguời chỉnh sửa</label>
                        <input id="UpdatedBy" type="text" value="@(Model.UpdatedBy ?? "Không có")" readonly
                            class="form-input">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('alpine:init', () => {
        Alpine.data('details', () => ({

            print() {
                window.print();
            },
            goBack() {
                window.history.back();
            }
        }));
    });
</script>
