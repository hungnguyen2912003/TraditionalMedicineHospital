@model Project.Areas.Admin.Models.DTOs.EmployeeDto

@{
    ViewData["Title"] = "Chỉnh sửa thông tin nhân sự";
    Layout = "~/Views/Shared/_mainAdminLayout.cshtml";
}

<div class="overlay" id="loadingOverlay">
    <span class="animate-spin border-8 border-[#f1f2f3] border-l-primary rounded-full w-14 h-14 inline-block align-middle"></span>
</div>

<form id="myForm" method="post" enctype="multipart/form-data" asp-action="Edit">
    @Html.AntiForgeryToken()
    <input type="hidden" id="Id" name="Id" value="@ViewBag.EmployeeId" />

    <div x-data="editData">
        <ul class="flex space-x-2 rtl:space-x-reverse">
            <li>
                <a href="javascript:;" class="text-primary hover:underline">Nhân sự</a>
            </li>
            <li class="before:content-['/'] ltr:before:mr-1 rtl:before:ml-1">
                <span>Chỉnh sửa</span>
            </li>
        </ul>
        <div class="pt-5 flex flex-col gap-2.5 xl:flex-row">
            <div class="panel flex-1 px-0 py-6 ltr:lg:mr-6 rtl:lg:ml-6">
                <div class="px-6">
                    <div class="text-lg font-semibold mb-6">Thêm thông tin nhân sự</div>
                    <div class="flex flex-col lg:flex-row gap-6">
                        <div class="w-full lg:max-w-full p-4 rounded-lg shadow-sm">
                            <div class="flex flex-col sm:flex-row gap-4 mb-4">
                                <div class="w-full sm:w-1/2">
                                    <label for="Code" class="block text-sm font-medium text-gray-700">Mã nhân sự</label>
                                    <input id="Code" type="text" name="Code" class="form-input w-full mt-1 p-2 border rounded" placeholder="Nhập mã nhân sự" value="@Model.Code" oninput="this.value = this.value.toUpperCase()" readonly />
                                    @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                                </div>
                                <div class="w-full sm:w-1/2">
                                    <label for="Name" class="block text-sm font-medium text-gray-700">Tên nhân sự</label>
                                    <input id="Name" type="text" name="Name" class="form-input w-full mt-1 p-2 border rounded" placeholder="Nhập họ tên nhân sự" value="@Model.Name" />
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="flex flex-col sm:flex-row gap-4 mb-4">
                                <div class="w-full sm:w-1/2">
                                    <label for="EmployeeCategoryId" class="block text-sm font-medium text-gray-700">Loại nhân sự</label>
                                    <div class="select-wrapper">
                                        <select id="EmployeeCategoryId" name="EmployeeCategoryId" class="form-input w-full mt-1 p-2 border rounded">
                                            <option value="">Chọn loại nhân sự</option>
                                            @foreach (var category in ViewBag.EmployeeCategories)
                                            {
                                                if (category.Id == Model.EmployeeCategoryId)
                                                {
                                                    <option value="@category.Id" selected>@category.Name</option>
                                                }
                                                else
                                                {
                                                    <option value="@category.Id">@category.Name</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.EmployeeCategoryId, "", new { @class = "text-danger" })
                                </div>
                                <div class="w-full sm:w-1/2">
                                    <label for="DepartmentId" class="block text-sm font-medium text-gray-700">Nhân sự thuộc Khoa</label>
                                    <div class="select-wrapper">
                                        <select id="DepartmentId" name="DepartmentId" class="form-input w-full mt-1 p-2 border rounded">
                                            <option value="">Chọn Khoa</option>
                                            @foreach (var dep in ViewBag.Departments)
                                            {
                                                if (dep.Id == Model.DepartmentId)
                                                {
                                                    <option value="@dep.Id" selected>@dep.Name</option>
                                                }
                                                else
                                                {
                                                    <option value="@dep.Id">@dep.Name</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="flex flex-col sm:flex-row gap-4 mb-4">

                                <div class="w-full sm:w-1/2">
                                    <label for="Gender" class="block text-sm font-medium text-gray-700">Giới tính</label>
                                    <div class="select-wrapper">
                                        <select id="Gender" name="Gender" class="form-input w-full mt-1 p-2 border rounded">
                                            <option value="">Chọn loại giới tính</option>
                                            @foreach (var gender in ViewBag.GenderOptions)
                                            {
                                                if (gender.Value == (int)Model.Gender)
                                                {
                                                    <option value="@gender.Value" selected>@gender.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@gender.Value">@gender.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                                </div>
                                <div class="w-full sm:w-1/2">
                                    <label for="DateOfBirth" class="block text-sm font-medium text-gray-700">Ngày sinh</label>
                                    <input id="DateOfBirth" type="text" name="DateOfBirth" class="form-input w-full mt-1 p-2 border rounded flatpickr" placeholder="Nhập sinh" value="@Model.DateOfBirth.ToString("dd/MM/yyyy")" />
                                    @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                                </div>
                                <div class="w-full sm:w-1/2">
                                    <label for="IdentityNumber" class="block text-sm font-medium text-gray-700">Căn cước công dân</label>
                                    <input id="IdentityNumber" type="text" name="IdentityNumber" class="form-input w-full mt-1 p-2 border rounded" placeholder="Nhập căn cước công dân" value="@Model.IdentityNumber" />
                                    @Html.ValidationMessageFor(model => model.IdentityNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="flex flex-col sm:flex-row gap-4 mb-4">
                                <div class="w-full">
                                    <label for="Address" class="block text-sm font-medium text-gray-700">Địa chỉ</label>
                                    <input id="Address" type="text" name="Address" class="form-input w-full mt-1 p-2 border rounded" placeholder="Nhập địa chỉ" value="@Model.Address" />
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="flex flex-col sm:flex-row gap-4 mb-4">
                                <div class="w-full sm:w-1/2">
                                    <label for="PhoneNumber" class="block text-sm font-medium text-gray-700">Số điện thoại</label>
                                    <input id="PhoneNumber" type="text" name="PhoneNumber" class="form-input w-full mt-1 p-2 border rounded" placeholder="Nhập số điện thoại" value="@Model.PhoneNumber" />
                                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                                </div>
                                <div class="w-full sm:w-1/2">
                                    <label for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                                    <input id="Email" type="text" name="EmailAddress" class="form-input w-full mt-1 p-2 border rounded" placeholder="Nhập email" value="@Model.EmailAddress" />
                                    @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="flex flex-col sm:flex-row gap-4 mb-4">
                                <div class="w-full sm:w-1/2">
                                    <label class="block text-sm font-medium text-gray-700">Thông tin bằng cấp</label>
                                    <div class="select-wrapper">
                                        <select id="Degree" name="Degree" class="form-input w-full mt-1 p-2 border rounded">
                                            <option value="">Chọn bằng cấp</option>
                                            @foreach (var degree in ViewBag.DegreeOptions)
                                            {
                                                if (degree.Value == (int)Model.Degree)
                                                {
                                                    <option value="@degree.Value" selected>@degree.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@degree.Value">@degree.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Degree, "", new { @class = "text-danger" })
                                </div>
                                <div class="w-full sm:w-1/2">
                                    <label class="block text-sm font-medium text-gray-700">Thông tin trình độ chuyên môn</label>
                                    <div class="select-wrapper">
                                        <select id="ProfessionalQualification" name="ProfessionalQualification" class="form-input w-full mt-1 p-2 border rounded">
                                            <option value="">Chọn trình độ chuyên môn</option>
                                            @foreach (var pq in ViewBag.ProfessionalOptions)
                                            {
                                                if (pq.Value == (int)Model.ProfessionalQualification)
                                                {
                                                    <option value="@pq.Value" selected>@pq.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@pq.Value">@pq.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ProfessionalQualification, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-6 w-full xl:mt-0 xl:w-96">
                <div class="panel mb-5">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 form-label">Hình ảnh nhân sự</label>
                        <div class="dropzone flex-1" id="imageDropzone"></div>
                        @if (!string.IsNullOrEmpty(ViewBag.ExistingImage))
                        {
                            <label for="fileInput" class="change-image-btn">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M8.5 10C9.32843 10 10 9.32843 10 8.5C10 7.67157 9.32843 7 8.5 7C7.67157 7 7 7.67157 7 8.5C7 9.32843 7.67157 10 8.5 10Z" fill="#ffffff"></path> <path fill-rule="evenodd" clip-rule="evenodd" d="M11.0055 2H12.9945C14.3805 1.99999 15.4828 1.99999 16.3716 2.0738C17.2819 2.14939 18.0575 2.30755 18.7658 2.67552C19.8617 3.24477 20.7552 4.1383 21.3245 5.23415C21.6925 5.94253 21.8506 6.71811 21.9262 7.62839C22 8.5172 22 9.61946 22 11.0054V12.9945C22 13.6854 22 14.306 21.9909 14.8646C22.0049 14.9677 22.0028 15.0726 21.9846 15.175C21.9741 15.6124 21.9563 16.0097 21.9262 16.3716C21.8506 17.2819 21.6925 18.0575 21.3245 18.7658C20.7552 19.8617 19.8617 20.7552 18.7658 21.3245C18.0575 21.6925 17.2819 21.8506 16.3716 21.9262C15.4828 22 14.3805 22 12.9946 22H11.0055C9.61955 22 8.5172 22 7.62839 21.9262C6.71811 21.8506 5.94253 21.6925 5.23415 21.3245C4.43876 20.9113 3.74996 20.3273 3.21437 19.6191C3.20423 19.6062 3.19444 19.5932 3.185 19.5799C2.99455 19.3238 2.82401 19.0517 2.67552 18.7658C2.30755 18.0575 2.14939 17.2819 2.0738 16.3716C1.99999 15.4828 1.99999 14.3805 2 12.9945V11.0055C1.99999 9.61949 1.99999 8.51721 2.0738 7.62839C2.14939 6.71811 2.30755 5.94253 2.67552 5.23415C3.24477 4.1383 4.1383 3.24477 5.23415 2.67552C5.94253 2.30755 6.71811 2.14939 7.62839 2.0738C8.51721 1.99999 9.61949 1.99999 11.0055 2ZM20 11.05V12.5118L18.613 11.065C17.8228 10.2407 16.504 10.2442 15.7182 11.0727L11.0512 15.9929L9.51537 14.1359C8.69326 13.1419 7.15907 13.1746 6.38008 14.2028L4.19042 17.0928C4.13682 16.8463 4.09606 16.5568 4.06694 16.2061C4.0008 15.4097 4 14.3905 4 12.95V11.05C4 9.60949 4.0008 8.59025 4.06694 7.79391C4.13208 7.00955 4.25538 6.53142 4.45035 6.1561C4.82985 5.42553 5.42553 4.82985 6.1561 4.4503