<script>
    document.addEventListener('DOMContentLoaded', async () => {
        try {
            const response = await fetch('/Admin/Account/GetUserInfo', {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            const data = await response.json();
            const homeElement = document.getElementById('home');
            const dashboardElement = document.getElementById('dashboard');
            if (data.success && data.role !== 'Admin') {
                document.querySelectorAll('.admin').forEach(item => {
                    item.style.display = 'none';
                });
                homeElement.href = '/staff';
                dashboardElement.href = '/staff';
            }
            else {
                homeElement.href = '/admin';
                dashboardElement.href = '/admin';
            }
        } catch (error) {
            console.error('Lỗi khi kiểm tra quyền sidebar:', error);
        }
    });
</script>