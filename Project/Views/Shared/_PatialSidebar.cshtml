                    homeElement.href = '/nhan-vien';
                    dashboardElement.href = '/nhan-vien';
                    document.querySelectorAll('.nvhc').forEach(item => {
                        item.style.display = '';
                    });
                }
            }
        } catch (error) {
            console.error('Lỗi khi kiểm tra quyền sidebar:', error);
