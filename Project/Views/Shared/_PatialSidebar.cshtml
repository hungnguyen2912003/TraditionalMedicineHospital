                document.querySelectorAll('.admin, .bacsi, .nvhc').forEach(item => {
                    item.style.display = 'none';
                });

                // Show items based on the user's role
                if (data.role === 'Admin') {
                    homeElement.href = '/admin';
                    dashboardElement.href = '/admin';
                    document.querySelectorAll('.admin').forEach(item => {
                        item.style.display = '';
                    });
                } else if (data.role === 'BacSi') {
                    homeElement.href = '/bac-si';
                    dashboardElement.href = '/bac-si';
                    document.querySelectorAll('.bacsi').forEach(item => {
                        item.style.display = '';
                    });
