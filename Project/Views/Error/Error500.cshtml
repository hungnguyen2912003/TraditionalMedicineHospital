@{
    ViewData["Title"] = "Lỗi phía máy chủ";
    Layout = "~/Views/Shared/_mainErrorLayout.cshtml";
}

<div class="relative flex min-h-screen items-center justify-center overflow-hidden">
    <div
        class="ppx-6 py-16 text-center font-semibold before:container before:absolute before:left-1/2 before:aspect-square before:-translate-x-1/2 before:rounded-full before:bg-[linear-gradient(180deg,#4361EE_0%,rgba(67,97,238,0)_50.73%)] before:opacity-10 md:py-20">
        <div class="relative">
            <img :src="$store.app.theme === 'dark' || $store.app.isDarkMode ? 'assets/images/error/500-dark.svg' : 'assets/images/error/500-light.svg'"
                alt="500" class="mx-auto -mt-10 w-full max-w-xs object-cover md:-mt-14 md:max-w-xl">
            <p class="mt-5 text-base dark:text-white">Hệ thống đang gặp sự cố, vui lòng thử lại sau!</p>
            <button @@click="goBack()" class="btn btn-gradient mx-auto !mt-7 w-max border-0 uppercase shadow-none">Trang
                chủ</button>
        </div>
    </div>
</div>

<script>
    function goBack() {
        if (window.isAdmin) {
            window.location.href = '/nhan-su';
        } else if (window.isBacSi) {
            window.location.href = '/bac-si';
        } else if (window.isNhanVienHanhChinh) {
            window.location.href = '/nhan-vien-hanh-chinh';
        } else if (window.isYTa) {
            window.location.href = '/y-ta';
        } else {
            window.location.href = '/';
        }
    }

    window.isAdmin = @(User.IsInRole("Admin").ToString().ToLower());
    window.isBacSi = @(User.IsInRole("BacSi").ToString().ToLower());
    window.isNhanVienHanhChinh = @(User.IsInRole("NhanVienHanhChinh").ToString().ToLower());
    window.isYTa = @(User.IsInRole("YTa").ToString().ToLower());
</script>